<div class="container mt-3 mb-1">
  <div class="row d-flex justify-content-center">
    <% @scooters.each do |scooter| %>
    <%= link_to scooter_path(scooter), class: "card col-3 my-1 mx-2 pt-3 shadow-sm p-3 mb-3 rounded d-flex flex-column scooter-cards text-decoration-none" do %>
        <img class="card-img-top rounded" src="https://media.wired.com/photos/652814d9791dfe8bf2d75169/master/pass/scooter-gear-3.-Front-3-4.jpg" alt="image of an e-scooter">
        <div class="card-body d-flex flex-column">
          <h3 class="card-title">
            <%= scooter.model %>
          </h3>
          <p class="card-text">
            <%= scooter.description %>
          </p>
          <div class="mt-auto">
            <p class="mb-1">Location: <%= scooter.location %></p>
            <p class="text-end">$<%= scooter.price_per_day %> / day</p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
