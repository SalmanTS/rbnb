<div class="container my-4">
  <div class="row d-flex justify-content-center">
    <% @scooters.each do |scooter| %>
      <div class="card col-3 my-2 mx-2 pt-2">
        <img class="card-img-top" src="https://media.wired.com/photos/652814d9791dfe8bf2d75169/master/pass/scooter-gear-3.-Front-3-4.jpg" alt="image of an e-scooter">
        <div class="card-body d-flex flex-column">
          <h3 class="card-title">
            <%= scooter.model %>
          </h3>
          <p class="card-text">
            <%= scooter.description %>
          </p>
          <div class="mt-auto text-end ">
            $<%= scooter.price %> / week
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
