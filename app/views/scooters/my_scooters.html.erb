<div class="container mt-5">
  <h1 class="text-center mb-4">My Scooters</h1>
  <div class="row d-flex justify-content-center">
    <% @scooters.each do |scooter| %>
      <%= link_to scooter_path(scooter), class: "card col-12 col-md-4 col-lg-3 my-2 mx-2 p-0 shadow-sm rounded d-flex flex-column text-decoration-none scooter-cards" do %>
        <% if scooter.images.attached? && scooter.images.first %>
          <%= image_tag url_for(scooter.images.first), class: "card-img-top rounded-top" %>
        <% else %>
          <%= image_tag "https://www.shutterstock.com/image-vector/happy-dog-illustration-cool-print-600nw-2278572967.jpg", class: "card-img-top rounded-top" %>
        <% end %>
        <div class="card-body d-flex flex-column">
          <h5 class="card-title text-dark">
            <%= scooter.model %>
          </h5>
          <p class="card-text text-muted">
            <%= scooter.description %>
          </p>
          <div class="mt-auto">
            <p class="text-muted mb-1">Location: <%= scooter.location || "Unknown" %></p>
            <p class="text-end text-primary fw-bold">$<%= scooter.price_per_day %> / day</p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
